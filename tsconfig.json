{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ESNext"],
    "allowJs": true,
    "checkJs": true,
    "outDir": "_build",
    "strict": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "types/*",
        "gi-types/*"
      ]
    },
    "resolveJsonModule": true,
    "typeRoots": [
      "gi-types"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "gi-types/gi.d.ts",
    "types/ambient.d.ts",
    "src/*"
  ]
}
